<div class="d-flex justify-content-around my-3">
  <h2><%= @list.name %></h2>
  <%= link_to 'New Bookmark', new_list_bookmark_path(@list), :class => "btn btn-info" %>
</div>
<div class="mx-auto p-5">
  <div class="d-flex">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card m-5" style="width: 25rem;">
      <img class="card-img-top" src="<%= bookmark.movie.poster_url%>" alt="Card image cap">
      <div class="card-body">
        <span>
          <span class="card-title"><%= bookmark.movie.title%> . </span>
          <span class="card-title"><%= bookmark.movie.rating%></span>
          <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
        </span>
        <p class="card-text"><%=bookmark.movie.overview%></p>
      </div>
      <div class="d-flex">
        <i class="fa-solid fa-quote-left mx-1"></i><p class="card-text mx-1"><%=bookmark.comment%></p>
        </div>
    </div>
  <% end %>
  </div>
    <h2>Reviews</h2>
    <div class="d-flex">
      <div class="w-50">
        <% @list.reviews.each do |review| %>
          <div class="card m-5" style="width: 25rem;">
            <div class="card-body">
              <span>
                <span class="card-title"><%= review.rating%></span>
                <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
              </span>
              <p class="card-text"><%=review.comment%></p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="w-50">
        <%= simple_form_for [@list, @review] do |f| %>
          <div class="form-group">
            <%= f.input :rating, collection: 1..5, label: "Rating", input_html: { class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.input :comment, label: "Comment", input_html: { class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.submit "Add Review", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
